# -*-python-*-

from openalea.sconsx import config, environ
import os

pj = os.path.join
ALEASolution = config.ALEASolution

options = Options(['../options.py', 'options.py'], ARGUMENTS)

# Dependencies
common_tools = ['vplants.mtg', 'vplants.tool',
                'vplants.amlobj', 'vplants.stat_tool',]

tools = ['alea','install'] + common_tools

env = ALEASolution(options, tools)

prefix = env['build_prefix']

# Build stage
SConscript(pj(prefix,"src/cpp/SConscript"),
           exports='env')

Default("build")
